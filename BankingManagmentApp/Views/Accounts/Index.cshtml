@model IEnumerable<BankingManagmentApp.Models.Accounts>

@{
    ViewData["Title"] = "Cards";
    ViewData["BodyClass"] = "profile-full-bg"; 
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-9">
                <div class="profile-card card shadow-lg border-0">
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-credit-card"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">Manage your cards</small>
                        </div>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <div class="mb-3">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fa-solid fa-plus me-1"></i> Apply for a new card
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>IBAN</th>
                                        <th>Type</th>
                                        <th>Balance</th>
                                        <th>Currency</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th>Customer</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        @if(item.Status=="Pending"){
                                        <tr>
                                            <td>@item.IBAN</td>
                                            <td>@item.AccountType</td>
                                            <td>@item.Balance</td>
                                            <td>@item.Currency</td>
                                            <td>@item.CreateAt.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Status</td>
                                            <td>@item.Customer.FirstName</td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Block</a>
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
