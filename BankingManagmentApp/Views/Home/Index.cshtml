@{
    ViewData["Title"] = "Welcome";
    ViewData["BodyClass"] = "light-theme";
}

<style>
    body.light-theme {
        background: linear-gradient(135deg, #ffffff 0%, #f4f7f9 100%);
        min-height: 100vh;
        color: #333;
        font-family: Arial, sans-serif;
    }

    @@media (max-width: 1400px) {
        .hero-section {
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 60px 20px;
        }

        .hero-content {
            max-width: 100%;
        }

        .hero-image {
            width: 100%;
            height: auto;
            margin-top: 60px;
        }

        .card {
            position: relative !important;
            transform: none !important;
            margin: 20px auto;
            width: 90%;
            max-width: 300px;
            top: auto !important;
            left: auto !important;
            bottom: auto !important;
            right: auto !important;
        }

            .card:hover {
                transform: scale(1.05) !important;
            }
    }

    .hero-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 80px 40px;
        min-height: 100vh;
        max-width: 1400px;
        margin: 0 auto;
    }

    .hero-content {
        max-width: 55%;
    }

    .tool-label {
        font-size: 1.1rem;
        color: #5d6d7e;
        font-weight: 600;
        letter-spacing: 1.5px;
        text-transform: uppercase;
    }

    .hero-content h1 {
        font-size: 4.5rem;
        font-weight: 900;
        line-height: 1.1;
        margin: 30px 0;
        color: #6251DB;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.05);
    }

    .subtitle {
        margin-bottom: 40px;
        font-size: 1.1rem;
        line-height: 1.6;
        color: #5d6d7e;
    }

    .cta-button {
        background-color: #6251DB;
        color: white;
        padding: 15px 40px;
        border-radius: 30px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 8px 20px rgba(70, 130, 180, 0.4);
        border: none;
    }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 25px rgba(70, 130, 180, 0.6);
            background-color: #9B6BFA;
            color: white;
        }

    .stats {
        display: flex;
        gap: 60px;
        margin-top: 50px;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 900;
        display: block;
        color: #6251DB;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #5d6d7e;
        text-transform: uppercase;
        margin-top: 5px;
        letter-spacing: 0.5px;
    }

    .hero-image {
        position: relative;
        width: 40%;
        height: 550px;
    }

    .card {
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 25px;
        width: 300px;
        color: #333;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

        .card.outcome {
            position: absolute;
            top: 10%;
            left: 5%;
            transform: rotate(-8deg);
            z-index: 2;
        }

        .card.income {
            position: absolute;
            bottom: 10%;
            right: 5%;
            transform: rotate(8deg);
            z-index: 1;
        }

        .card:hover {
            transform: scale(1.05) rotate(0deg);
            box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.2);
        }

    .card-title {
        color: #5d6d7e;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .card-value {
        font-size: 2rem;
        font-weight: 800;
        margin: 5px 0;
        color: #6251DB;
    }

    .card-sub {
        font-size: 0.8rem;
        color: #7f8c8d;
    }

    .features-section {
        width: 100%;
        padding: 80px 20px;
        color: #333;
    }

    .features-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 60px;
        color: #5d6d7e;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 40px;
        max-width: 1300px;
        margin: 0 auto;
    }

    .feature-card {
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 16px;
        padding: 40px 25px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(70, 130, 180, 0.15);
        }

    .feature-icon {
        font-size: 40px;
        margin-bottom: 20px;
        color: #6251DB;
    }

    .feature-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: #2c3e50;
    }

    .feature-text {
        font-size: 1rem;
        color: #5d6d7e;
    }
</style>

<div class="hero-section">
    <div class="hero-content">
        <span class="tool-label">GLOWPAY — Your financial co-pilot</span>
        <h1>
            Master Your Money <br />
            With Effortless <br />
            Digital Banking
        </h1>
        <p class="subtitle">
            Simplify your financial management with real-time insights, automated tracking,
            and seamless integrations. Stay in charge and achieve your goals — all in one powerful, intuitive platform.
        </p>

        <a asp-area="Identity" asp-page="/Account/Register" class="cta-button">
            Launch GlowPay Today
        </a>
    </div>

    <div class="hero-image">
        <div class="card outcome">
            <p class="card-title">Monthly Outcomes</p>
            <p class="card-value">-$3,568.47</p>
            <p class="card-sub">Tracking at a 12% increase from last month</p>
        </div>

        <div class="card income">
            <p class="card-title">Total Income</p>
            <p class="card-value">+$5,423.90</p>
            <p class="card-sub">Consistent growth in Q3</p>
        </div>
    </div>
</div>

<hr />

<section class="features-section">
    <h2 class="features-title">Why Choose GlowPay?</h2>
    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon"><i class="fa-solid fa-chart-line"></i></div>
            <div class="feature-title">Real-time Analytics</div>
            <div class="feature-text">Instantly view comprehensive reports and visual charts of your financial health.</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon"><i class="fa-solid fa-shield-halved"></i></div>
            <div class="feature-title">Bank-Grade Security</div>
            <div class="feature-text">Your data is protected by the highest level of encryption and multi-factor authentication.</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon"><i class="fa-solid fa-wallet"></i></div>
            <div class="feature-title">Automated Budgeting</div>
            <div class="feature-text">Set smart budgets and automatically categorize transactions with AI.</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon"><i class="fa-solid fa-mobile-alt"></i></div>
            <div class="feature-title">Seamless Mobile Access</div>
            <div class="feature-text">Manage your accounts, pay bills, and track spending from any device.</div>
        </div>
    </div>
</section>