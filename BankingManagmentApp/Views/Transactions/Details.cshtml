@model BankingManagmentApp.Models.Transactions

@{
    ViewData["Title"] = "Transaction Details";
    ViewData["BodyClass"] = "profile-full-bg";
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 col-xl-5">
                <div class="profile-card card shadow-lg border-0">

                    <!-- Header -->
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-receipt"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">Transaction information</small>
                        </div>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4 p-md-5">
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Transaction Type</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.TransactionType)</dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Amount)</dd>

                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Date)</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Description)</dd>

                            <dt class="col-sm-4">Reference #</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.ReferenceNumber)</dd>

                            <dt class="col-sm-4">Account Id</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.Accounts.Id)</dd>
                        </dl>

                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary flex-fill">
                                <i class="fa-solid fa-edit me-1"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                                <i class="fa-solid fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
