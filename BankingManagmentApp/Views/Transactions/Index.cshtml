@model IEnumerable<BankingManagmentApp.Models.Transactions>

@{
    ViewData["Title"] = "Transactions";
    ViewData["BodyClass"] = "profile-full-bg"; 
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-9">
                <div class="profile-card card shadow-lg border-0">
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-list"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">List of all transactions</small>
                        </div>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <div class="mb-3 text-end">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fa-solid fa-plus me-1"></i> Create New
                            </a>
                        </div>

                        @if (!Model.Any())
                        {
                            <div class="text-muted text-center py-4">No transactions found.</div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Type</th>
                                            <th class="text-end">Amount</th>
                                            <th>Date</th>
                                            <th>Description</th>
                                            <th>Ref.</th>
                                            <th>Account ID</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var t in Model)
                                        {
                                            var isDebit = string.Equals(t.TransactionType, "Debit", StringComparison.OrdinalIgnoreCase);
                                            <tr>
                                                <td>
                                                    <span class="badge @(isDebit ? "bg-danger" : "bg-success")">
                                                        @t.TransactionType
                                                    </span>
                                                </td>
                                                <td class="text-end text-mono @(isDebit ? "amount-negative" : "amount-positive")">
                                                    @(isDebit ? "-" : "+")@t.Amount.ToString("N2")
                                                </td>
                                                <td>@t.Date.ToString("dd.MM.yyyy")</td>
                                                <td>@t.Description</td>
                                                <td>@t.ReferenceNumber</td>
                                                <td>@t.Accounts.Id</td>
                                                <td class="text-end">
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">
                                                        <i class="fa-solid fa-pen"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
