@model BankingManagmentApp.Models.Transactions

@{
    ViewData["Title"] = "Delete Transaction";
    ViewData["BodyClass"] = "profile-full-bg"; // enable purple gradient background
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-7">
                <div class="profile-card card shadow-lg border-0">

                    <!-- Header -->
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-trash"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">Are you sure you want to delete this transaction?</small>
                        </div>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4 p-md-5">
                        <dl class="row">
                            <dt class="col-sm-4">Transaction Type</dt>
                            <dd class="col-sm-8">@Model.TransactionType</dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">@Model.Amount</dd>

                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.Date.ToString("dd.MM.yyyy")</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>

                            <dt class="col-sm-4">Reference Number</dt>
                            <dd class="col-sm-8">@Model.ReferenceNumber</dd>

                            <dt class="col-sm-4">Account</dt>
                            <dd class="col-sm-8">@Model.Accounts?.Id</dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fa-solid fa-trash me-1"></i> Delete
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
