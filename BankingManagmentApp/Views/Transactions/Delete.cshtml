@model BankingManagmentApp.Models.Transactions

@{
    ViewData["Title"] = "Delete Transaction";
    ViewData["BodyClass"] = "profile-full-bg";
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 col-xl-5">
                <div class="profile-card card shadow-lg border-0">

                    <!-- Header -->
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-trash"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">Are you sure you want to delete this transaction?</small>
                        </div>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4 p-md-5">
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Transaction Type</dt>
                            <dd class="col-sm-8">@Model.TransactionType</dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">@Model.Amount</dd>

                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.Date.ToString("dd.MM.yyyy")</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>

                            <dt class="col-sm-4">Reference #</dt>
                            <dd class="col-sm-8">@Model.ReferenceNumber</dd>

                            <dt class="col-sm-4">Account</dt>
                            <dd class="col-sm-8">@Model.Accounts?.Id</dd>
                        </dl>

                        <div class="d-flex gap-2">
                            <!-- ВАЖНО: бутонът вече е type="button", а формата има id -->
                            <form asp-action="Delete" method="post" id="deleteForm" class="flex-fill">
                                <input type="hidden" asp-for="Id" />
                                <button type="button" id="confirmDeleteBtn" class="btn btn-danger w-100">
                                    <i class="fa-solid fa-trash me-1"></i> Delete
                                </button>
                            </form>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                                <i class="fa-solid fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const btn = document.getElementById('confirmDeleteBtn');
            const form = document.getElementById('deleteForm');

            if (!btn || !form) return;

            btn.addEventListener('click', function () {
                // Ако SweetAlert2 е наличен – ползвай го; иначе резервен window.confirm
                if (window.Swal) {
                    Swal.fire({
                        title: 'Delete this transaction?',
                        text: 'This action cannot be undone.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, delete',
                        cancelButtonText: 'Cancel',
                        reverseButtons: true,
                        focusCancel: true
                    }).then((res) => {
                        if (res.isConfirmed) form.submit();
                    });
                } else {
                    if (confirm('Delete this transaction? This action cannot be undone.')) {
                        form.submit();
                    }
                }
            });
        })();
    </script>
}
