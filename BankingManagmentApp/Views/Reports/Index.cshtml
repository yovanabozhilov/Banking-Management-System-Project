@model BankingManagmentApp.ViewModels.Reports.ReportResultVm
@using BankingManagmentApp.ViewModels.Reports

@{
    ViewData["Title"] = "Reports";
    ViewData["BodyClass"] = "profile-full-bg";
    bool show = (ViewBag.ShowResults as bool?) ?? false;
}

<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/reports.css" asp-append-version="true" />

@section Head {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}

<div class="container-profile">

    <div class="reports-hero mb-3 text-center">
        <h1 class="page-title m-0">
            <span class="text-white">Reports</span>
        </h1>

        <nav aria-label="breadcrumb" class="mt-2">
            <ol class="breadcrumb breadcrumb-hero justify-content-center mb-0">
                <li class="breadcrumb-item">
                    <a class="hero-link" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
                </li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Reports</li>
            </ol>
        </nav>
    </div>

    <form asp-action="Index" method="post" class="mb-4" autocomplete="off" novalidate>
        @Html.AntiForgeryToken()

        <div class="card shadow-sm profile-section">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="row g-3 filters-row align-items-end">
                    <div class="col-12 col-md-3">
                        <label class="form-label xsmall mb-1">From</label>
                        <input asp-for="Filters.From" type="date" class="form-control form-control-sm compact-input" />
                        <span asp-validation-for="Filters.From" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label xsmall mb-1">To</label>
                        <input asp-for="Filters.To" type="date" class="form-control form-control-sm compact-input" />
                        <span asp-validation-for="Filters.To" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label xsmall mb-1">Account</label>
                        <select asp-for="Filters.AccountId"
                                asp-items="Model.Filters.AccountsSelect"
                                class="form-select form-select-sm compact-input">
                        </select>
                        <span asp-validation-for="Filters.AccountId" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label xsmall mb-1">Group by</label>
                        <select asp-for="Filters.GroupBy" class="form-select form-select-sm compact-input">
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                        </select>
                        <span asp-validation-for="Filters.GroupBy" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label xsmall mb-1">Client ID</label>
                        <input asp-for="Filters.CustomerId" class="form-control form-control-sm compact-input" placeholder="e.g. 3f1a... (AspNetUsers.Id)" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label xsmall mb-1">Client name / email / username</label>
                        <input asp-for="Filters.CustomerName" class="form-control form-control-sm compact-input" placeholder="e.g. Ivan Petrov" />
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-sm btn-gradient">
                    <i class="fas fa-chart-line me-1"></i> Run report
                </button>
            </div>
        </div>
    </form>

    @if (show)
    {
        if (Model?.Rows == null || !Model.Rows.Any())
        {
            <div class="card shadow-sm profile-section">
                <div class="card-body">
                    <div class="text-muted">No data for the selected period.</div>
                </div>
            </div>
        }
        else
        {
            @await Html.PartialAsync("_ReportTable", Model)
        }
    }
</div>
