@model BankingManagmentApp.Models.Loans

@{
    ViewData["Title"] = "Apply";
}

@section Head {
  <link rel="stylesheet" href="~/css/loans.css" asp-append-version="true" />
}

@{
    // ако Layout чете BodyClass, това ще пусне градиента
    ViewData["BodyClass"] = "loans-full-bg";
}

<div class="loan-page">
  <div class="container-xxl">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-9 col-xl-8">
        <div class="loan-card card shadow-lg border-0">

          <!-- Header (с иконка, като Apply) -->
          <div class="loan-header">
            <div class="d-flex align-items-center gap-3">
              <div class="loan-badge">
                <i class="fa-solid fa-file-signature" aria-hidden="true"></i>
              </div>
              <div>
                <h3 class="mb-0">Apply for a New Loan</h3>
                <small class="opacity-75">Fill the details below and attach your documents</small>
              </div>
            </div>
          </div>

          <!-- Body -->
          <div class="loan-body card-body p-4 p-md-5">
            <form asp-action="Apply" method="post" enctype="multipart/form-data" class="loan-form">
              @Html.AntiForgeryToken()

              <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

              <!-- Loan type -->
              <div class="mb-3">
                <label asp-for="Type" class="form-label">
                  Loan type <span class="required-star">*</span>
                </label>
                <select asp-for="Type" class="form-select form-select-lg" required>
                  <option value="">-- Select --</option>
                  <option value="Personal Loan">Personal Loan</option>
                  <option value="Home Loan">Home Loan</option>
                  <option value="Car Loan">Car Loan</option>
                  <option value="Business Loan">Business Loan</option>
                  <option value="Education Loan">Education Loan</option>
                </select>
                <span asp-validation-for="Type" class="text-danger small"></span>
              </div>

              <!-- Amount -->
              <div class="mb-3">
                <label asp-for="Amount" class="form-label">
                  Amount <span class="required-star">*</span>
                </label>
                <div class="input-group input-group-lg">
                  <span class="input-group-text">BGN</span>
                  <input asp-for="Amount"
                         class="form-control"
                         inputmode="decimal"
                         step="0.01"
                         min="0"
                         placeholder="e.g. 10,000.00"
                         required />
                </div>
                <div class="form-text">Approximate amount you wish to borrow.</div>
                <span asp-validation-for="Amount" class="text-danger small"></span>
              </div>

              <!-- Documents -->
              <div class="mb-4">
                <label class="form-label d-flex align-items-center gap-2">
                  Upload documents
                  <span class="hint-chip">PDF / JPG / PNG · max 10 MB each</span>
                  <i class="fa-regular fa-circle-question text-muted"
                     data-bs-toggle="tooltip"
                     title="Upload ID, income/salary proof and recent bank statements."></i>
                </label>
                <input type="file"
                       name="documents"
                       multiple
                       accept=".pdf,.jpg,.jpeg,.png"
                       class="form-control form-control-lg"
                       id="loanDocsInput" />
                <ul id="loanDocsList" class="file-list mt-2 mb-0"></ul>
              </div>

              <!-- Submit -->
              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                  <i class="fa-solid fa-paper-plane me-2"></i> Apply
                </button>
              </div>
            </form>
          </div>

          <!-- Footer -->
          <div class="card-footer bg-transparent text-center py-3">
            <a asp-action="Index" class="btn btn-link">Back to list</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <script>
    // Покажи summary, ако има грешки
    (function () {
      const summary = document.querySelector('[asp-validation-summary="ModelOnly"]') || document.querySelector('.validation-summary-errors, .validation-summary-valid');
      if (!summary) return;
      const hasErrors = summary.querySelector('ul li');
      if (hasErrors) { summary.classList.remove('d-none'); }
    })();

    // Лист с избраните файлове (само фронтенд)
    (function () {
      const input = document.getElementById('loanDocsInput');
      const list = document.getElementById('loanDocsList');
      if (!input || !list) return;

      const MAX_MB = 10;
      input.addEventListener('change', () => {
        list.innerHTML = '';
        const files = Array.from(input.files || []);
        files.forEach(f => {
          const li = document.createElement('li');
          const mb = (f.size / (1024 * 1024)).toFixed(2);
          li.className = 'file-item';
          li.innerHTML = `
            <i class="fa-regular fa-file-lines"></i>
            <span class="name text-truncate">${f.name}</span>
            <span class="size">${mb} MB</span>
            ${mb > MAX_MB ? '<span class="oversize">Too big</span>' : ''}
          `;
          list.appendChild(li);
        });
      });
    })();

    // Bootstrap tooltips (ако е зареден Bootstrap JS)
    (function () {
      if (window.bootstrap?.Tooltip) {
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
      }
    })();

    // Фейлсейф за градиента, ако Layout не чете BodyClass
    document.body.classList.add('loans-full-bg');
  </script>
}
