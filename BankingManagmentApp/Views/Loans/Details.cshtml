@model BankingManagmentApp.Models.Loans

@{
    ViewData["Title"] = "Loan Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Loan Details</h3>
        </div>

        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Credit Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4 text-muted">Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                <dt class="col-sm-4 text-muted">Term</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Term)</dd>

                <dt class="col-sm-4 text-muted">Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4 text-muted">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Status?.ToLower() == "approved" ? "bg-success" 
                                    : Model.Status?.ToLower() == "pending" ? "bg-warning text-dark" 
                                    : "bg-secondary")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                

                @if (Model.Status == "Pending" || Model.Status == "Rejected")
                {
                    <dt class="col-sm-4 text-muted">Approved Amount</dt>
                    <dd class="col-sm-8">-</dd>
                    <dt class="col-sm-4 text-muted">Approval Date</dt>
                    <dd class="col-sm-8">-</dd>
                }
                else{
                <dt class="col-sm-4 text-muted">Approved Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ApprovedAmount) lv</dd>
                <dt class="col-sm-4 text-muted">Approval Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ApprovalDate)</dd>
                }
                <dt class="col-sm-4 text-muted">Customer</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.FirstName)
                    @Html.DisplayFor(model => model.Customer.LastName)
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm">Edit</a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
        </div>
    </div>
</div>
