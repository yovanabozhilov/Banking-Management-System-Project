@model BankingManagmentApp.Models.Loans
@using System.Globalization

@{
    ViewData["Title"] = "Loan Details";
    ViewData["BodyClass"] = "loans-full-bg";
    var bg = CultureInfo.GetCultureInfo("bg-BG");
}

@section Head {
  <link rel="stylesheet" href="~/css/loans.css" asp-append-version="true" />
}

@functions {
    string LoanStatusBadgeClass(string? s)
    {
        var st = s?.ToLower();
        return st switch
        {
            "approved" or "autoapproved" => "bg-success",
            "pending" or "pendingreview" => "bg-warning text-dark",
            "declined" or "autodeclined" or "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string ShortId(string id)
    {
        if (string.IsNullOrEmpty(id)) return "-";
        return id.Length <= 12 ? id : id.Substring(0, 8) + "â€¦" + id[^4..];
    }
}

<div class="profile-page py-5">
  <div class="container-xxl pb-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6 col-xl-5">
        <div class="loan-card card shadow-lg border-0">
          <div class="loan-header p-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
              <div class="d-flex align-items-center gap-3">
                <div class="loan-badge">
                  <i class="fa-solid fa-file-invoice-dollar" aria-hidden="true"></i>
                </div>
                <div>
                  <h3 class="mb-0">Loan Details</h3>
                  <small class="opacity-75">@Model?.Type</small>
                </div>
              </div>
              <span class="badge badge-tight @LoanStatusBadgeClass(Model?.Status)">
                @Model?.Status
              </span>
            </div>
          </div>

          <div class="loan-body card-body p-4 p-md-5">

            <dl class="details-dl mb-4">
              <div class="details-row">
                <dt>Loan ID</dt>
                <dd class="text-mono">
                  <span>@Model?.Id</span>
                </dd>
              </div>

              <div class="details-row">
                <dt>Credit Type</dt>
                <dd>@Model?.Type</dd>
              </div>

              <div class="details-row">
                <dt>Amount</dt>
                <dd class="text-mono">@Model?.Amount.ToString("N2", bg) <span class="text-muted">BGN</span></dd>
              </div>

              <div class="details-row">
                <dt>Term</dt>
                <dd>@Model?.Term.ToString("dd.MM.yyyy")</dd>
              </div>

              <div class="details-row">
                <dt>Request Date</dt>
                <dd>@Model?.Date.ToString("dd.MM.yyyy")</dd>
              </div>

              <div class="details-row">
                <dt>Approved Amount</dt>
                @if (string.Equals(Model?.Status, "Approved", System.StringComparison.OrdinalIgnoreCase) ||
                     string.Equals(Model?.Status, "AutoApproved", System.StringComparison.OrdinalIgnoreCase))
                {
                  <dd class="text-mono">@Model?.ApprovedAmount.ToString("N2", bg) <span class="text-muted">BGN</span></dd>
                }
                else
                {
                  <dd class="text-muted">-</dd>
                }
              </div>

              <div class="details-row">
                <dt>Approval Date</dt>
                @if (string.Equals(Model?.Status, "Approved", System.StringComparison.OrdinalIgnoreCase) ||
                     string.Equals(Model?.Status, "AutoApproved", System.StringComparison.OrdinalIgnoreCase))
                {
                  <dd>@Model?.ApprovalDate.ToString("dd.MM.yyyy")</dd>
                }
                else
                {
                  <dd class="text-muted">-</dd>
                }
              </div>

              <div class="details-row">
                <dt>Borrower</dt>
                <dd>@Model?.Customer?.FirstName @Model?.Customer?.LastName</dd>
              </div>

              <div class="details-row">
                <dt>Borrower ID</dt>
                <dd class="text-mono">
                  @if (!string.IsNullOrEmpty(Model?.CustomerId))
                  {
                    <span title="@Model.CustomerId">@ShortId(Model.CustomerId)</span>
                    <button type="button"
                            class="btn btn-link copy-link-purple p-0 ms-2 align-baseline copy-id-btn"
                            data-copy-id="@Model.CustomerId"
                            title="Copy borrower ID" aria-label="Copy borrower ID">
                      <i class="fas fa-copy" aria-hidden="true"></i>
                    </button>
                  }
                  else
                  {
                    <span class="text-muted">-</span>
                  }
                </dd>
              </div>
            </dl>

            @if (Model?.LoanApplications != null && Model.LoanApplications.Any())
            {
              <hr class="my-4" />
              <h5 class="section-title d-flex align-items-center gap-2">
                <i class="fa-regular fa-folder-open"></i>
                Attached Documents
              </h5>
              <ul class="doc-list list-unstyled mt-3 mb-0">
                @foreach (var doc in Model.LoanApplications)
                {
                  <li class="doc-item d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2 text-truncate">
                      <i class="fa-regular fa-file-lines"></i>
                      <span class="doc-name text-truncate">@doc.FileName</span>
                    </div>
                    <a class="btn btn-primary"
                       asp-action="DownloadDocument"
                       asp-route-id="@doc.Id">
                      <i class="fa-solid fa-download me-1"></i> Download
                    </a>
                  </li>
                }
              </ul>
            }
            else
            {
              <hr class="my-4" />
              <div class="text-muted">No documents attached.</div>
            }
          </div>

          <div class="card-footer bg-transparent d-flex justify-content-between">
            @if (User.IsInRole("Admin"))
            {
              <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fa-regular fa-pen-to-square me-1"></i> Edit
              </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
              <i class="fa-solid fa-arrow-left-long me-1"></i> Back to list
            </a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    document.body.classList.add('loans-full-bg');
  </script>
}
