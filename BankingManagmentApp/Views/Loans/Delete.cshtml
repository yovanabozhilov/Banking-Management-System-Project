@model BankingManagmentApp.Models.Loans
@using System.Globalization

@{
    ViewData["Title"] = "Cancel Loan";
    ViewData["BodyClass"] = "loans-full-bg";   // purple → white gradient
    var bg = CultureInfo.GetCultureInfo("bg-BG");
}

@section Head {
  <link rel="stylesheet" href="~/css/loans.css" asp-append-version="true" />
}

@functions {
    string LoanStatusBadgeClass(string? s)
    {
        var st = s?.ToLower();
        return st switch
        {
            "approved" or "autoapproved" => "bg-success",
            "pending" or "pendingreview" => "bg-warning text-dark",
            "declined" or "autodeclined" or "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<!-- page spacing -->
<div class="profile-page py-5">
  <div class="container-xxl pb-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6 col-xl-5">
        <div class="loan-card card shadow-lg border-0">

          <!-- Header (PURPLE like other pages) -->
          <div class="loan-header p-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
              <div class="d-flex align-items-center gap-3">
                <div class="loan-badge">
                  <i class="fa-solid fa-trash-can" aria-hidden="true"></i>
                </div>
                <div>
                  <h3 class="mb-0">Cancel Loan</h3>
                  <small class="opacity-75">Please confirm this irreversible action</small>
                </div>
              </div>
              <span class="badge badge-tight @LoanStatusBadgeClass(Model?.Status)">
                @Model?.Status
              </span>
            </div>
          </div>

          <!-- Body -->
          <div class="card-body p-4 p-md-5">

            <!-- Warning stays RED -->
            <div class="alert-danger-soft d-flex align-items-start gap-2 mb-4 rounded-3 p-3">
              <i class="fa-solid fa-triangle-exclamation mt-1" aria-hidden="true"></i>
              <div>
                <strong>Warning:</strong> This action can’t be undone. Any attached documents will no longer be available.
              </div>
            </div>

            <!-- Key facts -->
            <dl class="details-dl mb-4">
              <div class="details-row">
                <dt>Type</dt>
                <dd>@Model?.Type</dd>
              </div>

              <div class="details-row">
                <dt>Amount</dt>
                <dd class="text-mono">@Model?.Amount.ToString("N2", bg) <span class="text-muted">BGN</span></dd>
              </div>

              <div class="details-row">
                <dt>Term</dt>
                <dd>@Model?.Term.ToString("dd.MM.yyyy")</dd>
              </div>

              <div class="details-row">
                <dt>Date</dt>
                <dd>@Model?.Date.ToString("dd.MM.yyyy")</dd>
              </div>

              <div class="details-row">
                <dt>Approved Amount</dt>
                @if (string.Equals(Model?.Status, "Approved", System.StringComparison.OrdinalIgnoreCase) ||
                     string.Equals(Model?.Status, "AutoApproved", System.StringComparison.OrdinalIgnoreCase))
                {
                  <dd class="text-mono">@Model?.ApprovedAmount.ToString("N2", bg) <span class="text-muted">BGN</span></dd>
                }
                else
                {
                  <dd class="text-muted">-</dd>
                }
              </div>

              <div class="details-row">
                <dt>Approval Date</dt>
                @if (string.Equals(Model?.Status, "Approved", System.StringComparison.OrdinalIgnoreCase) ||
                     string.Equals(Model?.Status, "AutoApproved", System.StringComparison.OrdinalIgnoreCase))
                {
                  <dd>@Model?.ApprovalDate.ToString("dd.MM.yyyy")</dd>
                }
                else
                {
                  <dd class="text-muted">-</dd>
                }
              </div>

              <div class="details-row">
                <dt>Customer</dt>
                <dd>@Model?.Customer?.FirstName @Model?.Customer?.LastName</dd>
              </div>
            </dl>

            <!-- Confirm form -->
            <form asp-action="Delete" method="post" class="d-flex justify-content-between flex-wrap gap-2" id="loanDeleteForm">
              @Html.AntiForgeryToken()
              <input type="hidden" asp-for="Id" />
              <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left-long me-1"></i> Back to list
              </a>
              <!-- Button is RED, but we intercept for confirm -->
              <button type="button" class="btn btn-danger" id="confirmDeleteLoanBtn">
                <i class="fa-regular fa-trash-can me-1"></i> Delete
              </button>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    // Fallback: apply gradient if Layout doesn’t read BodyClass
    document.body.classList.add('loans-full-bg');

    // SweetAlert2 confirm (with graceful fallback)
    (function () {
      const btn = document.getElementById('confirmDeleteLoanBtn');
      const form = document.getElementById('loanDeleteForm');
      if (!btn || !form) return;

      btn.addEventListener('click', function () {
        const ask = () => {
          if (window.Swal) {
            Swal.fire({
              title: 'Delete this loan?',
              text: 'This action can’t be undone. Any attached documents will no longer be available.',
              icon: 'warning',
              showCancelButton: true,
              confirmButtonText: 'Yes, delete',
              cancelButtonText: 'Cancel',
              reverseButtons: true,
              focusCancel: true
            }).then(res => { if (res.isConfirmed) form.submit(); });
          } else {
            if (confirm('Delete this loan?\nThis action can’t be undone. Any attached documents will no longer be available.')) {
              form.submit();
            }
          }
        };
        ask();
      });
    })();
  </script>
}
