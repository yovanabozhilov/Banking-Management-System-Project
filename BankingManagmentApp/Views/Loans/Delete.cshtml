@model BankingManagmentApp.Models.Loans

@{
    ViewData["Title"] = "Delete Loan";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Delete Loan</h3>
        </div>

        <div class="card-body p-4">
            <h5 class="text-center text-muted mb-4">Are you sure you want to delete this loan?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-muted">Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4 text-muted">Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                <dt class="col-sm-4 text-muted">Term</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Term)</dd>

                <dt class="col-sm-4 text-muted">Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4 text-muted">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4 text-muted">Approved Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ApprovedAmount)</dd>

                <dt class="col-sm-4 text-muted">Approval Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ApprovalDate)</dd>

                <dt class="col-sm-4 text-muted">Customer</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Id)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
