@model IEnumerable<BankingManagmentApp.Models.Loans>
@using System.Globalization

@{
    ViewData["Title"] = "Loans";
    var bg = CultureInfo.GetCultureInfo("bg-BG");
}

@functions {
    string LoanStatusBadgeClass(string? s)
    {
        var st = s?.ToLower();
        return st switch
        {
            "approved" or "autoapproved"  => "bg-success",
            "pending"  or "pendingreview" => "bg-warning text-dark",
            "declined" or "autodeclined"  => "bg-danger",
            _                              => "bg-secondary"
        };
    }
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h3 class="mb-0">Loans</h3>
            <a asp-action="Create" class="btn btn-light btn-sm">+ Create New</a>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-muted text-center">No loans found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Type)</th>
                                <th class="text-end">@Html.DisplayNameFor(model => model.Amount)</th>
                                <th>@Html.DisplayNameFor(model => model.Term)</th>
                                <th>@Html.DisplayNameFor(model => model.Date)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <th class="text-end">@Html.DisplayNameFor(model => model.ApprovedAmount)</th>
                                <th>@Html.DisplayNameFor(model => model.ApprovalDate)</th>
                                <th>@Html.DisplayNameFor(model => model.Customer)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var st = item.Status?.ToLower();
                                var isApproved = st == "approved" || st == "autoapproved";

                                <tr>
                                    <td>@item.Type</td>
                                    <td class="text-end">@item.Amount.ToString("N2", bg)</td>

                                    <td>
                                        @item.Term.ToString("dd.MM.yyyy")
                                    </td>

                                    <td>
                                        @item.Date.ToString("dd.MM.yyyy")
                                    </td>

                                    <td>
                                        <span class="badge @LoanStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>

                                    <td class="text-end">
                                        @(isApproved ? item.ApprovedAmount.ToString("N2", bg) : "-")
                                    </td>

                                    <td>
                                        @(isApproved ? item.ApprovalDate.ToString("dd.MM.yyyy") : "-")
                                    </td>

                                    <td>
                                        @item.Customer?.Id
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                            }
                                            @if(User.IsInRole("Admin")||User.IsInRole("User"))
                                            {
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
