<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - BankingManagmentApp</title>

    <!-- Hint към браузъра за двете цветови схеми -->
    <meta name="color-scheme" content="light dark" />

    <!-- Apply theme site-wide from cookie BEFORE CSS to avoid flash -->
    <script>
        (function () {
          try {
            function readCookie(name) {
              var m = document.cookie.match(new RegExp('(?:^|;\\s*)' + name + '=([^;]+)'));
              return m ? decodeURIComponent(m[1]) : null;
            }
            function effective(mode) {
              if (mode === 'system') {
                return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
              }
              return mode === 'dark' ? 'dark' : 'light';
            }
            function apply(mode) {
              var theme = effective(mode || 'system');
              var html = document.documentElement;
              html.setAttribute('data-bs-theme', theme);
              // optional fallback class for any custom CSS
              html.classList.toggle('dark', theme === 'dark');
            }

            var saved = readCookie('theme') || 'system';
            apply(saved);

            // Auto-update when OS scheme changes (only in 'system' mode)
            if (saved === 'system' && window.matchMedia) {
              var mq = window.matchMedia('(prefers-color-scheme: dark)');
              var cb = function () { apply('system'); };
              if (mq.addEventListener) mq.addEventListener('change', cb);
              else if (mq.addListener) mq.addListener(cb); // Safari/old
            }
          } catch (e) { /* no-op */ }
        })();
    </script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingManagmentApp.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Head", required: false)
</head>
