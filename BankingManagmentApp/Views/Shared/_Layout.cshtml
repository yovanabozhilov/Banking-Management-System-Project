                                <a class="nav-link" style="color: steelblue; font-weight:800;font-size:18px;" asp-area="" asp-controller="Loans" asp-action="Create">Apply for credit</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: steelblue; font-weight:800;font-size:18px;" asp-area="" asp-controller="Accounts" asp-action="Create">New Card</a>
                            </li>
                            @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AdminDashboard" asp-action="CategoryComparison">Category Comparison</a>
                            </li> *@

                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: steelblue; font-weight:800;font-size:18px;" asp-area="" asp-controller="Loans" asp-action="Index">Pending Credits</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: steelblue; font-weight:800;font-size:18px;" asp-area="" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: steelblue; font-weight:800;font-size:18px;" asp-area="" asp-controller="Loans" asp-action="Index">Your Credits</a>
                            </li>
