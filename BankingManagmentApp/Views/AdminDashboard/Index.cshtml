@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Admin Dashboard";
    //var monthlyData = ViewBag.MonthlyData as IEnumerable<dynamic>;
    var monthlyData = ViewBag.MonthlyData as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Inter', sans-serif;
        }

        .card {
            background-color: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            padding: 1.5rem;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            }

        h1 {
            font-size: 2.25rem;
            font-weight: 700;
            color: #1f2937;
            text-align: center;
            padding: 2rem 0;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 0.5rem;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #111827;
            line-height: 1;
        }

        .stat-label {
            font-size: 0.8rem;
            font-weight: 500;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .change-indicator {
            font-size: 0.75rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            margin-top: 0.25rem;
        }

        .chart-container {
            height: 250px;
            width: 100%;
        }

        .icon-sm {
            height: 1.5rem;
            width: 1.5rem;
        }
    </style>
</head>

<div class="container mx-auto px-4 py-8">
    <h1><span class="text-indigo-600">Admin</span> Dashboard</h1>

    <p class="text-right mb-4">
        <a asp-controller="Reports" asp-action="Index"
           class="text-indigo-600 hover:text-indigo-800 underline underline-offset-4 text-sm"
           aria-label="Open Reports page">
            Reports →
        </a>
    </p>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="section-title">📊 Clients</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Total Clients</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a4 4 0 014-4h.294a2 2 0 011.664.897l.85 1.5M10 17H5m-2 2v-4a2 2 0 012-2h.294a2 2 0 011.664-.897l.85 1.5M12 21h-2m6-4h2a2 2 0 002-2v-4a2 2 0 00-2-2h-2m-4-2H5a2 2 0 01-2-2v-4a2 2 0 012-2h4a2 2 0 012 2v4a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.TotalClients</div>
                <p class="change-indicator @(ViewBag.ClientsChange >= 0 ? "text-green-600" : "text-red-600")">
                    @String.Format("{0:+0.0;-0.0;0}%", ViewBag.ClientsChange) from last month
                </p>
            </div>

            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">New Clients This Month</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 14v6m-8-6v6M12 4v6m0 0H9m3 0h3" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.NewClientsThisMonth</div>
                <p class="text-xs text-gray-400 mt-2">New additions</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="section-title">💰 Loans</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Total Loans</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V6m0 10v2m-6-6H4m16 0h-2m-6 4H8a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v8a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.TotalCredits</div>
                <p class="change-indicator @(ViewBag.CreditsChange >= 0 ? "text-green-600" : "text-red-600")">
                    @String.Format("{0:+0.0;-0.0;0}%", ViewBag.CreditsChange) from last month
                </p>
            </div>

            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Overdue Loans</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" />
                    </svg>
                </div>
                @if (ViewBag.OverdueLoans > 0)
                {
                    <div class="stat-value">@ViewBag.OverdueLoans</div>
                    <p class="text-xs text-red-500 mt-2">Requires immediate attention</p>
                }
                else
                {
                    <div class="text-xl font-bold text-gray-500 mb-1">
                        <p>None</p>
                    </div>
                    <p class="text-xs text-gray-400 mt-2">All up to date</p>
                }
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="section-title">📈 Deposits & Withdrawals</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Total Deposits</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8V6m0 10v2m-6-6H4m16 0h-2m-6 4H8a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v8a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.TotalDeposits</div>
                <p class="change-indicator @(ViewBag.DepositsChange >= 0 ? "text-green-600" : "text-red-600")">
                    @String.Format("{0:+0.0;-0.0;0}%", ViewBag.DepositsChange) from last month
                </p>
            </div>

            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Total Withdrawals</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM17 14h2m-2-4v4m-2-4h-2m-2-4h-2m-2 4h-2m-2 4h-2" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.TotalWithdrawals</div>
                <p class="change-indicator @(ViewBag.WithdrawalsChange >= 0 ? "text-green-600" : "text-red-600")">
                    @String.Format("{0:+0.0;-0.0;0}%", ViewBag.WithdrawalsChange) from last month
                </p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="section-title">💳 Cards</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">Total Cards</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m4 0h1M5 6h14a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2z" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.TotalCards</div>
                <p class="text-xs text-gray-400 mt-2">Total cards issued</p>
            </div>

            <div class="card">
                <div class="flex items-center justify-between mb-2">
                    <p class="stat-label">New Cards This Month</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon-sm text-pink-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c0 1.105-.895 2-2 2s-2-.895-2-2 .895-2 2-2 2 .895 2 2zM21 11c0 1.105-.895 2-2 2s-2-.895-2-2 .895-2 2-2 2 .895 2 2zM16.5 15h-9a2.5 2.5 0 00-2.5 2.5V20h14v-2.5a2.5 2.5 0 00-2.5-2.5z" />
                    </svg>
                </div>
                <div class="stat-value">@ViewBag.NewCardsMonthly</div>
                <p class="text-xs text-gray-400 mt-2">Freshly issued cards</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="section-title text-center">📈 Monthly Overview</h2>
        <div class="chart-container">
            <canvas id="financeChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById("financeChart").getContext("2d");

    var labels = [
        @foreach (var item in monthlyData)
        {
                @: "@item.Month/@item.Year",
        }
    ];

    var deposits = [
        @foreach (var item in monthlyData)
        {
                @: @item.Deposits,
        }
    ];

    var withdrawals = [
        @foreach (var item in monthlyData)
        {
                @: @item.Withdrawals,
        }
    ];

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Deposits',
                    data: deposits,
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    tension: 0.4,
                    pointBackgroundColor: '#10b981',
                    pointBorderColor: '#fff',
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    fill: true
                },
                {
                    label: 'Withdrawals',
                    data: withdrawals,
                    borderColor: '#ef4444',
                    backgroundColor: 'rgba(239, 68, 68, 0.1)',
                    tension: 0.4,
                    pointBackgroundColor: '#ef4444',
                    pointBorderColor: '#fff',
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    fill: true
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#e5e7eb',
                        borderDash: [5, 5]
                    },
                    ticks: {
                        color: '#6b7280',
                        font: {
                            size: 10
                        }
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        color: '#6b7280',
                        font: {
                            size: 10
                        }
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        font: {
                            family: 'Inter',
                            size: 12,
                            weight: '600'
                        },
                        boxWidth: 15,
                        padding: 15
                    }
                },
                tooltip: {
                    backgroundColor: '#1f2937',
                    titleFont: {
                        family: 'Inter',
                        size: 12,
                        weight: '600'
                    },
                    bodyFont: {
                        family: 'Inter',
                        size: 10
                    },
                    padding: 10,
                    displayColors: true,
                    boxPadding: 4,
                    borderColor: '#4b5563',
                    borderWidth: 1
                }
            }
        }
    });
</script>