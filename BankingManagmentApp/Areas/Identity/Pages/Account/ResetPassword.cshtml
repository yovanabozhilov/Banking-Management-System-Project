@page
@model BankingManagmentApp.Areas.Identity.Pages.Account.ResetPasswordModel

@{
    ViewData["Title"] = "Reset password";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@{ ViewData["BodyClass"] = "auth-full-bg"; }

<div class="auth-page">
  <div class="container-xxl">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12">

          <div class="auth-card shadow-lg border-0">
            <div class="row g-0 align-items-stretch">
              <div class="col-lg-5 d-none d-lg-block auth-illustration"
                   style="background-image:url('/images/auth/reset-side.jpg')"></div>

              <div class="col-12 col-lg-7 auth-panel">
                <div class="auth-header text-center">
                  <h2 class="mb-1">Set a new password</h2>
                  <small class="opacity-75">Choose a strong password you haven't used before.</small>
                </div>

                <div class="auth-body card-body p-4 p-md-5">
                  <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                    <input type="hidden" asp-for="Input.Code" />

                    <div class="mb-3">
                      <label asp-for="Input.Email" class="form-label">Email</label>
                      <div class="position-relative">
                        <span class="input-icon"><i class="fa-regular fa-envelope"></i></span>
                        <input asp-for="Input.Email"
                               class="form-control form-control-lg ps-5"
                               autocomplete="username"
                               placeholder="name@example.com" />
                      </div>
                      <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                      <label asp-for="Input.Password" class="form-label">New password</label>
                      <div class="input-group input-group-lg">
                        <span class="input-group-text bg-transparent border-end-0">
                          <i class="fa-solid fa-key"></i>
                        </span>
                        <input asp-for="Input.Password"
                               class="form-control border-start-0"
                               autocomplete="new-password"
                               placeholder="New password"
                               id="passwordInput" />
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                          <i class="fa-regular fa-eye"></i>
                        </button>
                      </div>
                      <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                      <label asp-for="Input.ConfirmPassword" class="form-label">Confirm new password</label>
                      <div class="input-group input-group-lg">
                        <span class="input-group-text bg-transparent border-end-0">
                          <i class="fa-solid fa-lock"></i>
                        </span>
                        <input asp-for="Input.ConfirmPassword"
                               class="form-control border-start-0"
                               autocomplete="new-password"
                               placeholder="Confirm password"
                               id="confirmPasswordInput" />
                        <button type="button" class="btn btn-outline-secondary" id="toggleConfirmPassword">
                          <i class="fa-regular fa-eye"></i>
                        </button>
                      </div>
                      <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">
                      <i class="fa-regular fa-circle-check me-2"></i> Reset password
                    </button>

                    <div class="text-center mt-3 small">
                      <a asp-page="./Login">Back to login</a>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script>
    (function(){
      const t1=document.getElementById('togglePassword'), p1=document.getElementById('passwordInput');
      const t2=document.getElementById('toggleConfirmPassword'), p2=document.getElementById('confirmPasswordInput');
      if(t1&&p1){ t1.addEventListener('click',()=>{ const is=p1.type==='password'; p1.type=is?'text':'password'; t1.innerHTML=is?'<i class="fa-regular fa-eye-slash"></i>':'<i class="fa-regular fa-eye"></i>'; });}
      if(t2&&p2){ t2.addEventListener('click',()=>{ const is=p2.type==='password'; p2.type=is?'text':'password'; t2.innerHTML=is?'<i class="fa-regular fa-eye-slash"></i>':'<i class="fa-regular fa-eye"></i>'; });}
      document.body.classList.add('auth-full-bg');
    })();
  </script>
}
