@page
@model BankingManagmentApp.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot password";
    ViewData["BodyClass"] = "auth-full-bg";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/forgotpassword.css" asp-append-version="true" />
}

<!-- more space from header/footer, keep wide card -->
<div class="auth-page py-5">
  <div class="container-xxl pb-5">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12">

          <div class="auth-card shadow-lg border-0">
            <div class="row g-0 align-items-stretch">
              <!-- LEFT: Illustration on ≥lg -->
              <div class="col-lg-5 d-none d-lg-block auth-illustration"
                   style="background-image:url('/images/auth/envelope.jpg')">
              </div>

              <!-- RIGHT: Form panel -->
              <div class="col-12 col-lg-7 auth-panel">

                <!-- Header (thin & centered by CSS) -->
                <div class="auth-header d-flex flex-column justify-content-center align-items-center text-center">
                  <h2 class="mb-1">Forgot your password?</h2>
                  <small class="opacity-75">Enter your email and we’ll send you a reset link.</small>
                </div>

                <!-- Body -->
                <div class="auth-body card-body p-4 p-md-5">
                  <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                    <!-- Email -->
                    <div class="mb-3">
                      <label asp-for="Input.Email" class="form-label">Email</label>
                      <div class="position-relative">
                        <span class="input-icon"><i class="fa-regular fa-envelope"></i></span>
                        <input asp-for="Input.Email"
                               class="form-control ps-5"
                               autocomplete="username"
                               inputmode="email"
                               placeholder="name@example.com" />
                      </div>
                      <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                      <i class="fa-regular fa-paper-plane me-2"></i> Send reset link
                    </button>

                    <!-- Secondary links -->
                    <div class="d-flex justify-content-between align-items-center small">
                      <a asp-page="./Login" class="link-offset-2">Back to login</a>
                      <span>
                        Don’t have an account?
                        <a asp-page="./Register" class="link-offset-2">Sign up</a>
                      </span>
                    </div>
                  </form>
                </div><!-- /auth-body -->

              </div><!-- /auth-panel -->
            </div>
          </div><!-- /auth-card -->

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script>
    // Ensure gradient if Layout doesn't apply BodyClass
    document.body.classList.add('auth-full-bg');
  </script>
}
