@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configure Authenticator App";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
    ViewData["BodyClass"] = "profile-full-bg";
}
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-page">
    <div class="container-xxl">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-9">
                <div class="profile-card card shadow-lg border-0">

                    <!-- HEADER -->
                    <div class="profile-header d-flex align-items-center gap-3 p-4 border-bottom">
                        <div class="profile-badge">
                            <i class="fa-solid fa-mobile-screen-button"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                            <small class="opacity-75">Set up your authenticator app</small>
                        </div>
                    </div>

                    <!-- BODY -->
                    <div class="card-body p-4 p-md-5">
                        <partial name="_StatusMessage" for="StatusMessage" />

                        <div class="row g-4">
                            <!-- Instructions -->
                            <div class="col-12 col-lg-7">
                                <div class="card shadow-sm border-0 h-100">
                                    <div class="card-body p-4">
                                        <h5 class="mb-3">Steps to configure</h5>
                                        <ol class="list ps-3">
                                            <li class="mb-3">
                                                <p>
                                                    Download an authenticator app such as <b>Microsoft Authenticator</b> for
                                                    <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> /
                                                    <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a>
                                                    or <b>Google Authenticator</b> for
                                                    <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=en">Android</a> /
                                                    <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
                                                </p>
                                            </li>

                                            <li class="mb-3">
                                                <p>Scan the QR code or enter this key:</p>
                                                <div class="alert alert-light border d-inline-block">
                                                    <kbd>@Model.SharedKey</kbd>
                                                </div>
                                                <div class="text-center my-3">
                                                    <img src="data:image/png;base64,@Model.AuthenticatorUri" width="150" height="150" class="shadow rounded" />
                                                </div>
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>

                            <!-- Verification form -->
                            <div class="col-12 col-lg-5">
                                <div class="card shadow-sm border-0 h-100">
                                    <div class="card-body p-4">
                                        <h5 class="mb-3">Verify setup</h5>
                                        <p class="text-muted">Enter the code generated by your app:</p>

                                        <form id="send-code" method="post">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Code" class="form-control" autocomplete="off" placeholder="Enter verification code" />
                                                <label asp-for="Input.Code" class="form-label">Verification Code</label>
                                                <span asp-validation-for="Input.Code" class="text-danger"></span>
                                            </div>

                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="fa-solid fa-check me-2"></i> Verify
                                            </button>

                                            <div asp-validation-summary="ModelOnly" class="text-danger mt-2" role="alert"></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-page="./Index" class="btn btn-outline-secondary w-100">
                                Back to 2FA settings
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript" src="~/lib/qrcode.js"></script>
    <script type="text/javascript" src="~/js/qr.js"></script>
}
