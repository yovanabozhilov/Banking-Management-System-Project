@page
@model PageModel
@{
    ViewData["Title"] = "Password reset";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@{ ViewData["BodyClass"] = "auth-full-bg"; }

<div class="auth-page">
  <div class="container-xxl">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

          <div class="auth-card shadow-lg border-0">
            <div class="auth-header text-center">
              <h2 class="mb-1">Your password has been reset</h2>
              <small class="opacity-75">You can now log in with your new password.</small>
            </div>
            <div class="auth-body card-body p-4 p-md-5 text-center">
              <a asp-page="./Login" class="btn btn-primary btn-lg">
                <i class="fa-solid fa-right-to-bracket me-2"></i> Go to login
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts { <script>document.body.classList.add('auth-full-bg');</script> }
