@page
@model PageModel
@{
    ViewData["Title"] = "Reset link sent";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@{ ViewData["BodyClass"] = "auth-full-bg"; }

<div class="auth-page">
  <div class="container-xxl">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

          <div class="auth-card shadow-lg border-0">
            <div class="auth-header text-center">
              <h2 class="mb-1">Check your email</h2>
              <small class="opacity-75">If an account exists for that address, you'll get a reset link.</small>
            </div>
            <div class="auth-body card-body p-4 p-md-5 text-center">
              <p>Didnâ€™t receive the email? Also check your spam folder.</p>
              <a asp-page="./Login" class="btn btn-primary">Back to login</a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts { <script>document.body.classList.add('auth-full-bg');</script> }
