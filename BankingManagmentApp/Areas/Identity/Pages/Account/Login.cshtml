@page
@model BankingManagmentApp.Areas.Identity.Pages.Account.LoginModel
@using System.Globalization

@{
    ViewData["Title"] = "Log in";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@{
    ViewData["BodyClass"] = "auth-full-bg";
}

<div class="auth-page">
  <div class="container-xxl">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12">

          <div class="auth-card shadow-lg border-0">
            <div class="row g-0 align-items-stretch">

              <!-- LEFT: Illustration (покажи само на ≥lg) -->
              <div class="col-lg-5 d-none d-lg-block auth-illustration"
                   style="background-image:url('/images/auth/login-side.jpg')">
                <!-- декоративен overlay идва от ::after в CSS -->
              </div>

              <!-- RIGHT: Wider form panel -->
              <div class="col-12 col-lg-7 auth-panel">
                <!-- Header -->
                <div class="auth-header text-center">
                  <h2 class="mb-1">Welcome back</h2>
                  <small class="opacity-75">Log in to access your account</small>
                </div>

                <!-- Body -->
                <div class="auth-body card-body p-4 p-md-5">
                  <form id="account" method="post">
                    @* (По твое желание премахнат общият alert над Email) *@
                    @* <div asp-validation-summary="All" class="alert alert-danger small" role="alert"></div> *@

                    <!-- Email -->
                    <div class="mb-3">
                      <label asp-for="Input.Email" class="form-label">Email</label>
                      <div class="position-relative">
                        <span class="input-icon">
                          <i class="fa-regular fa-envelope"></i>
                        </span>
                        <input asp-for="Input.Email"
                               class="form-control form-control-lg ps-5"
                               autocomplete="username"
                               placeholder="name@example.com" />
                      </div>
                      <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Password + toggle -->
                    <div class="mb-3">
                      <label asp-for="Input.Password" class="form-label">Password</label>
                      <div class="input-group input-group-lg">
                        <span class="input-group-text bg-transparent border-end-0">
                          <i class="fa-solid fa-key"></i>
                        </span>
                        <input asp-for="Input.Password"
                               class="form-control border-start-0"
                               autocomplete="current-password"
                               placeholder="Your password"
                               id="passwordInput" />
                        <button type="button"
                                class="btn btn-outline-secondary"
                                id="togglePassword"
                                aria-label="Show or hide password">
                          <i class="fa-regular fa-eye"></i>
                        </button>
                      </div>
                      <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <!-- CAPTCHA -->
                    <div class="mb-3">
                      <label class="form-label">Security check</label>
                      <div class="captcha-group d-flex align-items-center gap-3">
                        <img id="captchaImage"
                             class="captcha-img rounded border"
                             src="/Account/CaptchaImage"
                             data-src="/Account/CaptchaImage"
                             alt="CAPTCHA" />
                        <button type="button" class="btn btn-outline-secondary btn-refresh-captcha" id="refreshCaptcha">
                          <i class="fa-solid fa-rotate-right me-1"></i> Refresh
                        </button>
                      </div>

                      <div class="mt-3">
                        <input asp-for="Input.CaptchaInput"
                               class="form-control form-control-lg"
                               placeholder="Enter the code shown above" />
                        <span asp-validation-for="Input.CaptchaInput" class="text-danger small"></span>
                      </div>
                    </div>

                    <!-- Remember me -->
                    <div class="form-check form-switch mb-4">
                      <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeSwitch" />
                      <label class="form-check-label" for="rememberMeSwitch">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                      </label>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                      <i class="fa-solid fa-right-to-bracket me-2"></i> Log in
                    </button>

                    <!-- Links -->
                    <div class="d-flex justify-content-between small">
                      <a asp-page="./ForgotPassword" class="link-offset-2">Forgot your password?</a>
                      <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-offset-2">Create account</a>
                    </div>

                    <!-- External providers -->
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                      <hr class="my-4" />
                      <p class="text-center small text-muted mb-3">Or continue with</p>
                      <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                          <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            <button type="submit"
                                    class="btn btn-outline-secondary btn-lg w-100"
                                    name="provider"
                                    value="@provider.Name">
                              @provider.DisplayName
                            </button>
                          </form>
                        }
                      </div>
                    }
                  </form>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <script>
    // Show/Hide password
    (function () {
      const btn = document.getElementById('togglePassword');
      const input = document.getElementById('passwordInput');
      if (btn && input) {
        btn.addEventListener('click', () => {
          const isPwd = input.getAttribute('type') === 'password';
          input.setAttribute('type', isPwd ? 'text' : 'password');
          btn.innerHTML = isPwd
            ? '<i class="fa-regular fa-eye-slash"></i>'
            : '<i class="fa-regular fa-eye"></i>';
        });
      }
    })();

    // Refresh CAPTCHA
    (function () {
      const img = document.getElementById('captchaImage');
      const btn = document.getElementById('refreshCaptcha');
      if (img && btn) {
        const base = img.getAttribute('data-src') || img.getAttribute('src');
        btn.addEventListener('click', () => {
          img.src = base + '?_=' + Date.now();  // cache-bust
        });
      }
    })();

    // Активиране на фоновия градиент (ако Layout не чете ViewData["BodyClass"])
    document.body.classList.add('auth-full-bg');
  </script>
}
