@page
@model BankingManagmentApp.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel

@{
    ViewData["Title"] = "Check your email";
    ViewData["BodyClass"] = "auth-full-bg";
}

@section Head {
  <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-page py-5">
  <div class="container-xxl pb-5">
    <div class="auth-wrap">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="auth-card shadow-lg border-0">
            <div class="row g-0 align-items-stretch">

              <!-- LEFT: Illustration (optional) -->
              <div class="col-lg-5 d-none d-lg-block auth-illustration"
                   style="background-image:url('/images/auth/envelope.jpg')"></div>

              <!-- RIGHT: Panel -->
              <div class="col-12 col-lg-7 auth-panel">
                <div class="auth-header text-center p-4">
                  <h2 class="mb-1">Check your email</h2>
                  <small class="opacity-75">
                    If an account exists for that email, we’ve sent a password reset link.
                  </small>
                </div>

                <div class="auth-body card-body p-4 p-md-5">
                  <p class="mb-4">
                    Didn’t get the email? Check your spam folder or try again with a different address.
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <a asp-page="./Login" class="btn btn-outline-secondary">Back to login</a>
                    <a asp-page="./ForgotPassword" class="btn btn-primary">Try another email</a>
                  </div>
                </div>

              </div><!-- /panel -->
            </div>
          </div><!-- /card -->
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>document.body.classList.add('auth-full-bg');</script>
}
